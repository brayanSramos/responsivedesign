---
import Header from "../components/header.astro";
import Footer from "../components/footer.astro";
import SelectQuines from "../components/select/select.astro";
import SelectInicio from "../components/select/selectincio.astro";
import SelectCont from "../components/select/selectCont.astro";
import Txtservicios from "../components/card/txtservici.astro";
import Selectservi from "../components/select/selectservi.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Responsive Design">
  <Header />
  <SelectInicio />
  <SelectQuines />
  <Txtservicios />
  <SelectCont />
  <Footer />
</Layout>

<script>
  const btnSwitch = document.querySelector("#switch");
  btnSwitch.addEventListener("click", () => {
    document.body.classList.toggle("dark");
    btnSwitch.classList.toggle("active");
  });
</script>
